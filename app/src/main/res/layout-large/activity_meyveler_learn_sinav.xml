<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/arka">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:layout_width="798dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="796dp"
                android:layout_height="120dp"
                android:layout_marginRight="25dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/anasayfa"
                    android:layout_width="125dp"
                    android:layout_height="100dp"

                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:background="@mipmap/main" />

                <com.google.android.gms.ads.AdView
                    android:id="@+id/adView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    app:adSize="LARGE_BANNER"
                    app:adUnitId="ca-app-pub-3206398076180977/8684812993" />

                <Button
                    android:id="@+id/sonraki_soru"
                    android:layout_width="125dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="30dp"
                    android:background="@mipmap/hoparlor"
                    android:visibility="visible" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="798dp"
                android:layout_height="211dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageViewa"
                    android:layout_width="125dp"
                    android:layout_height="150dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_weight="1"
                    app:srcCompat="@mipmap/aslan" />

                <ImageView
                    android:id="@+id/imageViewb"
                    android:layout_width="125dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_weight="1"
                    app:srcCompat="@mipmap/araba" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="798dp"
                android:layout_height="229dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageViewc"
                    android:layout_width="125dp"
                    android:layout_height="150dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="30dp"
                    android:layout_weight="1"
                    app:srcCompat="@mipmap/avakado" />

                <ImageView
                    android:id="@+id/imageViewd"
                    android:layout_width="125dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="30dp"
                    android:layout_weight="1"
                    app:srcCompat="@mipmap/astronot" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="164dp"
            android:layout_height="400dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/arti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="50dp"
                android:layout_weight="1"
                android:background="@mipmap/add" />

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="50dp"
                android:layout_weight="1"
                android:background="@mipmap/audio" />

            <Button
                android:id="@+id/eksi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="50dp"
                android:layout_weight="1"
                android:background="@mipmap/minus" />

            <TextView
                android:id="@+id/isimler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                android:textStyle="normal|bold" />
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>